<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShowOff Life - Withdrawal Management</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <%- include('partials/admin-styles') %>
</head>
<body>
    <div class="admin-container">
        <%- include('partials/admin-sidebar', { currentPage: 'withdrawals' }) %>

        <main class="main-content">
            <%- include('partials/admin-header', { pageTitle: 'Withdrawal Management' }) %>

            <div class="content-area">
                <!-- Stats Cards -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b, #d97706);">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="stat-value"><%= statusCounts.pending || 0 %></div>
                        <div class="stat-label">Pending Approval</div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon" style="background: linear-gradient(135deg, #10b981, #059669);">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="stat-value"><%= statusCounts.completed || 0 %></div>
                        <div class="stat-label">Completed</div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon" style="background: linear-gradient(135deg, #ef4444, #dc2626);">
                            <i class="fas fa-times-circle"></i>
                        </div>
                        <div class="stat-value"><%= statusCounts.rejected || 0 %></div>
                        <div class="stat-label">Rejected</div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-icon" style="background: linear-gradient(135deg, #667eea, #764ba2);">
                            <i class="fas fa-dollar-sign"></i>
                        </div>
                        <div class="stat-value">₹<%= (totalPaid / 100).toLocaleString() %></div>
                        <div class="stat-label">Total Paid Out</div>
                    </div>
                </div>

                <!-- Filters -->
                <div class="filter-bar">
                    <div class="filter-group">
                        <label>Status:</label>
                        <select id="statusFilter" onchange="filterByStatus(this.value)">
                            <option value="all" <%= currentStatus === 'all' ? 'selected' : '' %>>All</option>
                            <option value="pending" <%= currentStatus === 'pending' ? 'selected' : '' %>>Pending</option>
                            <option value="processing" <%= currentStatus === 'processing' ? 'selected' : '' %>>Processing</option>
                            <option value="completed" <%= currentStatus === 'completed' ? 'selected' : '' %>>Completed</option>
                            <option value="rejected" <%= currentStatus === 'rejected' ? 'selected' : '' %>>Rejected</option>
                        </select>
                    </div>
                </div>

                <!-- Withdrawals Table -->
                <div class="table-container">
                    <div class="table-header">
                        <h3>Withdrawal Requests (<%= withdrawals.length %>)</h3>
                    </div>
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Amount</th>
                                <th>Method</th>
                                <th>Details</th>
                                <th>Requested</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (withdrawals && withdrawals.length > 0) { %>
                                <% withdrawals.forEach(withdrawal => { %>
                                    <tr>
                                        <td>
                                            <div class="user-profile">
                                                <img src="<%= withdrawal.user.profilePicture ? (withdrawal.user.profilePicture.startsWith('http') ? withdrawal.user.profilePicture : 'http://localhost:3000' + withdrawal.user.profilePicture) : 'https://via.placeholder.com/40' %>" alt="<%= withdrawal.user.displayName %>" class="user-avatar" onerror="this.src='https://via.placeholder.com/40'">
                                                <div class="user-info">
                                                    <h4><%= withdrawal.user.displayName %></h4>
                                                    <p>@<%= withdrawal.user.username %></p>
                                                    <p style="font-size: 0.7rem;">Balance: <%= withdrawal.user.coinBalance %> coins</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div style="font-weight: 600; color: #f59e0b;">
                                                <i class="fas fa-coins"></i> <%= withdrawal.amount.toLocaleString() %> coins
                                            </div>
                                            <div style="font-size: 0.75rem; color: #64748b;">
                                                ≈ ₹<%= (withdrawal.amount / 100).toLocaleString() %>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge">
                                                <%= withdrawal.method === 'bank' ? 'Bank Transfer' : 'Web3 Wallet' %>
                                            </span>
                                        </td>
                                        <td>
                                            <% if (withdrawal.method === 'bank' && withdrawal.bankDetails) { %>
                                                <div style="font-size: 0.75rem;">
                                                    <div><%= withdrawal.bankDetails.accountHolderName %></div>
                                                    <div>****<%= withdrawal.bankDetails.accountNumber.slice(-4) %></div>
                                                    <div><%= withdrawal.bankDetails.ifscCode %></div>
                                                </div>
                                            <% } else if (withdrawal.method === 'web3' && withdrawal.walletAddress) { %>
                                                <div style="font-size: 0.75rem;">
                                                    <%= withdrawal.walletAddress.slice(0, 6) %>...<%=withdrawal.walletAddress.slice(-4) %>
                                                </div>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div><%= new Date(withdrawal.createdAt).toLocaleDateString() %></div>
                                            <div style="font-size: 0.75rem; color: #64748b;"><%= new Date(withdrawal.createdAt).toLocaleTimeString() %></div>
                                        </td>
                                        <td>
                                            <span class="status-badge status-<%= withdrawal.status %>">
                                                <%= withdrawal.status.toUpperCase() %>
                                            </span>
                                        </td>
                                        <td>
                                            <div style="display: flex; gap: 0.25rem;">
                                                <button class="btn btn-sm btn-primary" onclick="viewWithdrawal('<%= withdrawal._id %>')" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <% if (withdrawal.status === 'pending') { %>
                                                    <button class="btn btn-sm btn-success" onclick="approveWithdrawal('<%= withdrawal._id %>')" title="Approve">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-danger" onclick="rejectWithdrawal('<%= withdrawal._id %>')" title="Reject">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="7" class="loading">
                                        <i class="fas fa-inbox"></i>
                                        <p>No withdrawal requests found</p>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <% if (pagination && pagination.pages > 1) { %>
                    <div style="display: flex; justify-content: center; gap: 0.5rem; margin-top: 2rem;">
                        <% for (let i = 1; i <= pagination.pages; i++) { %>
                            <a href="/admin/withdrawals?status=<%= currentStatus %>&page=<%= i %>" class="btn <%= i === pagination.page ? 'btn-primary' : '' %>" style="<%= i === pagination.page ? '' : 'background: white; color: #64748b; border: 1px solid #e2e8f0;' %>">
                                <%= i %>
                            </a>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </main>
    </div>

    <!-- Withdrawal Details Modal -->
    <div id="withdrawalModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Withdrawal Request Details</h3>
                <button onclick="closeModal()" class="close-btn">&times;</button>
            </div>
            <div id="withdrawalModalContent" class="modal-body">
                <!-- Dynamic content -->
            </div>
        </div>
    </div>

    <script>
        function filterByStatus(status) {
            window.location.href = `/admin/withdrawals?status=${status}`;
        }

        function viewWithdrawal(withdrawalId) {
            document.getElementById('withdrawalModalContent').innerHTML = '<div class="loading"><i class="fas fa-spinner fa-spin"></i><p>Loading...</p></div>';
            document.getElementById('withdrawalModal').style.display = 'flex';
            
            fetch(`/api/withdrawal/${withdrawalId}`, {
                headers: {
                    'Authorization': `Bearer ${localStorage.getItem('adminToken') || ''}`
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    displayWithdrawalDetails(data.data);
                } else {
                    alert('Error loading withdrawal details');
                }
            })
            .catch(error => {
                alert('Error: ' + error.message);
            });
        }

        function displayWithdrawalDetails(withdrawal) {
            const html = `
                <div class="info-group">
                    <label>User:</label>
                    <p>${withdrawal.user.displayName} (@${withdrawal.user.username})</p>
                </div>
                <div class="info-group">
                    <label>Amount:</label>
                    <p>${withdrawal.amount.toLocaleString()} coins (≈ ₹${(withdrawal.amount / 100).toLocaleString()})</p>
                </div>
                <div class="info-group">
                    <label>Method:</label>
                    <p>${withdrawal.method === 'bank' ? 'Bank Transfer' : 'Web3 Wallet'}</p>
                </div>
                <div class="info-group">
                    <label>Status:</label>
                    <p>${withdrawal.status.toUpperCase()}</p>
                </div>
                <div class="info-group">
                    <label>Requested:</label>
                    <p>${new Date(withdrawal.createdAt).toLocaleString()}</p>
                </div>
                ${withdrawal.status === 'pending' ? `
                    <div style="margin-top: 2rem; display: flex; gap: 1rem;">
                        <button class="btn btn-success" onclick="approveWithdrawal('${withdrawal._id}')">
                            <i class="fas fa-check"></i> Approve
                        </button>
                        <button class="btn btn-danger" onclick="rejectWithdrawal('${withdrawal._id}')">
                            <i class="fas fa-times"></i> Reject
                        </button>
                    </div>
                ` : ''}
            `;
            document.getElementById('withdrawalModalContent').innerHTML = html;
        }

        function approveWithdrawal(withdrawalId) {
            const notes = prompt('Enter admin notes (optional):');
            if (confirm('Are you sure you want to approve this withdrawal?')) {
                fetch(`/api/withdrawal/${withdrawalId}/approve`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${localStorage.getItem('adminToken') || ''}`
                    },
                    body: JSON.stringify({ adminNotes: notes })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Withdrawal approved successfully');
                        window.location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    alert('Error: ' + error.message);
                });
            }
        }

        function rejectWithdrawal(withdrawalId) {
            const reason = prompt('Enter rejection reason:');
            if (!reason) return;
            
            if (confirm('Are you sure you want to reject this withdrawal?')) {
                fetch(`/api/withdrawal/${withdrawalId}/reject`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${localStorage.getItem('adminToken') || ''}`
                    },
                    body: JSON.stringify({ rejectionReason: reason })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Withdrawal rejected');
                        window.location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    alert('Error: ' + error.message);
                });
            }
        }

        function closeModal() {
            document.getElementById('withdrawalModal').style.display = 'none';
        }
    </script>
</body>
</html>
