        <!-- Main Content -->
        <main class="main-content">
            <header class="header">
                <h1>Financial Management</h1>
            </header>

            <div class="content-area">
                <!-- Page Header -->
<div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 2rem;">
    <div>
        <h2 style="font-size: 1.875rem; font-weight: 700; color: #1e293b; margin-bottom: 0.5rem;">Financial Management</h2>
        <p style="color: #64748b;">Monitor transactions, withdrawals, and financial analytics</p>
    </div>
</div>

<!-- Financial Stats -->
<div class="stats-grid" style="margin-bottom: 2rem;">
    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon revenue">
                <i class="fas fa-coins"></i>
            </div>
        </div>
        <div class="stat-value"><%= totalCoinsInCirculation.toLocaleString() %></div>
        <div class="stat-label">Coins in Circulation</div>
    </div>
    
    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon orders">
                <i class="fas fa-exchange-alt"></i>
            </div>
        </div>
        <div class="stat-value">
            <%= transactionStats.reduce((total, stat) => total + stat.count, 0).toLocaleString() %>
        </div>
        <div class="stat-label">Total Transactions</div>
    </div>
    
    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon users">
                <i class="fas fa-money-bill-wave"></i>
            </div>
        </div>
        <div class="stat-value"><%= withdrawalRequests.length %></div>
        <div class="stat-label">Pending Withdrawals</div>
    </div>
    
    <div class="stat-card">
        <div class="stat-header">
            <div class="stat-icon content">
                <i class="fas fa-chart-line"></i>
            </div>
        </div>
        <div class="stat-value">
            $<%= transactionStats.reduce((total, stat) => total + (stat.totalAmount || 0), 0).toLocaleString() %>
        </div>
        <div class="stat-label">Total Volume</div>
    </div>
</div>

<!-- Transaction Analytics -->
<div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem; margin-bottom: 2rem;">
    <div class="chart-container">
        <div class="chart-header">
            <h3>Transaction Types</h3>
        </div>
        <canvas id="transactionChart" style="max-height: 300px;"></canvas>
    </div>
    
    <div class="table-container" style="margin-bottom: 0;">
        <div class="table-header">
            <h3>Transaction Breakdown</h3>
        </div>
        <div style="padding: 1rem;">
            <% if (transactionStats && transactionStats.length > 0) { %>
                <% transactionStats.forEach(stat => { %>
                    <div style="display: flex; justify-content: space-between; align-items: center; padding: 0.75rem 0; border-bottom: 1px solid rgba(0,0,0,0.05);">
                        <div>
                            <div style="font-weight: 600; color: #1e293b; text-transform: capitalize;">
                                <%= stat._id.replace('_', ' ') %>
                            </div>
                            <div style="font-size: 0.75rem; color: #64748b;"><%= stat.count %> transactions</div>
                        </div>
                        <div style="font-weight: 700; color: #f59e0b;">
                            <i class="fas fa-coins"></i> <%= stat.totalAmount.toLocaleString() %>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="loading">
                    <i class="fas fa-chart-bar"></i>
                    <p>No transaction data</p>
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Top Earners -->
<div class="table-container">
    <div class="table-header">
        <h3>Top Earning Users</h3>
    </div>
    <table class="data-table">
        <thead>
            <tr>
                <th>User</th>
                <th>Current Balance</th>
                <th>Total Earned</th>
                <th>Earning Rate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (topEarners && topEarners.length > 0) { %>
                <% topEarners.forEach((user, index) => { %>
                    <tr>
                        <td>
                            <div class="user-profile">
                                <div style="background: linear-gradient(135deg, #667eea, #764ba2); color: white; width: 30px; height: 30px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 700; margin-right: 0.75rem;">
                                    #<%= index + 1 %>
                                </div>
                                <img src="<%= user.profilePicture || 'data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%2240%22 height=%2240%22%3E%3Crect fill=%22%23ddd%22 width=%2240%22 height=%2240%22/%3E%3Ctext x=%2250%25%22 y=%2250%25%22 text-anchor=%22middle%22 dy=%22.3em%22 fill=%22%23999%22 font-family=%22sans-serif%22 font-size=%2216%22%3E?%3C/text%3E%3C/svg%3E' %>" alt="<%= user.displayName %>" class="user-avatar">
                                <div class="user-info">
                                    <h4><%= user.displayName %></h4>
                                    <p>@<%= user.username %></p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div style="font-weight: 600; color: #f59e0b;">
                                <i class="fas fa-coins"></i> <%= (user.coinBalance || 0).toLocaleString() %>
                            </div>
                        </td>
                        <td>
                            <div style="font-weight: 700; color: #10b981;">
                                <i class="fas fa-coins"></i> <%= (user.totalCoinsEarned || 0).toLocaleString() %>
                            </div>
                        </td>
                        <td>
                            <div style="font-size: 0.875rem; color: #64748b;">
                                <%= ((user.totalCoinsEarned || 0) / 30).toFixed(0) %> coins/day
                            </div>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-primary" onclick="viewUserFinancials('<%= user._id %>')">
                                <i class="fas fa-chart-line"></i> View Details
                            </button>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="5" class="loading">
                        <i class="fas fa-users"></i>
                        <p>No earning data available</p>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<!-- Withdrawal Requests -->
<% if (withdrawalRequests && withdrawalRequests.length > 0) { %>
    <div class="table-container" style="margin-top: 2rem;">
        <div class="table-header">
            <h3>Pending Withdrawal Requests</h3>
        </div>
        <table class="data-table">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Amount</th>
                    <th>Method</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% withdrawalRequests.forEach(request => { %>
                    <tr>
                        <td>
                            <div class="user-profile">
                                <img src="<%= request.user.profilePicture || 'data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%2240%22 height=%2240%22%3E%3Crect fill=%22%23ddd%22 width=%2240%22 height=%2240%22/%3E%3Ctext x=%2250%25%22 y=%2250%25%22 text-anchor=%22middle%22 dy=%22.3em%22 fill=%22%23999%22 font-family=%22sans-serif%22 font-size=%2216%22%3E?%3C/text%3E%3C/svg%3E' %>" alt="<%= request.user.displayName %>" class="user-avatar">
                                <div class="user-info">
                                    <h4><%= request.user.displayName %></h4>
                                    <p>@<%= request.user.username %></p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div style="font-weight: 700; color: #ef4444;">
                                $<%= request.amount.toFixed(2) %>
                            </div>
                        </td>
                        <td>
                            <span class="status-badge" style="background: #3b82f6; color: white;">
                                <%= request.method.toUpperCase() %>
                            </span>
                        </td>
                        <td>
                            <div style="font-size: 0.875rem;"><%= new Date(request.createdAt).toLocaleDateString() %></div>
                            <div style="font-size: 0.75rem; color: #64748b;"><%= new Date(request.createdAt).toLocaleTimeString() %></div>
                        </td>
                        <td>
                            <div style="display: flex; gap: 0.5rem;">
                                <button class="btn btn-sm btn-success" onclick="processWithdrawal('<%= request._id %>', 'approve')">
                                    <i class="fas fa-check"></i> Approve
                                </button>
                                <button class="btn btn-sm btn-danger" onclick="processWithdrawal('<%= request._id %>', 'reject')">
                                    <i class="fas fa-times"></i> Reject
                                </button>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
<% } %>

<script>
    // Transaction Types Chart
    const transactionCtx = document.getElementById('transactionChart').getContext('2d');
    new Chart(transactionCtx, {
        type: 'doughnut',
        data: {
            labels: [<% if (transactionStats) { %>
                <% transactionStats.forEach((stat, index) => { %>
                    '<%= stat._id.replace("_", " ") %>'<%= index < transactionStats.length - 1 ? ',' : '' %>
                <% }) %>
            <% } %>],
            datasets: [{
                data: [<% if (transactionStats) { %>
                    <% transactionStats.forEach((stat, index) => { %>
                        <%= stat.count %><%= index < transactionStats.length - 1 ? ',' : '' %>
                    <% }) %>
                <% } %>],
                backgroundColor: [
                    '#667eea', '#f093fb', '#4facfe', '#43e97b', '#f59e0b', '#ef4444'
                ],
                borderWidth: 0
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { position: 'bottom' }
            }
        }
    });

    function viewUserFinancials(userId) {
        alert('User financial details would be shown here');
    }

    function processWithdrawal(requestId, action) {
        const actionText = action === 'approve' ? 'approve' : 'reject';
        if (confirmAction(`Are you sure you want to ${actionText} this withdrawal request?`)) {
            // In a real implementation, you would make an API call
            alert(`Withdrawal request ${actionText}d successfully`);
            // window.location.reload();
        }
    }
</script>
            </div>
        </main>
    </div>
</body>
