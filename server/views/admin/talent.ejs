<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShowOff Life - Talent Management</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <%- include('partials/admin-styles') %>
</head>
<body>
    <div class="admin-container">
        <%- include('partials/admin-sidebar', { currentPage: 'talent' }) %>

        <main class="main-content">
            <%- include('partials/admin-header', { pageTitle: 'Talent Management' }) %>

            <div class="content-area">
                <!-- Current Competition Info -->
                <% if (currentCompetition) { %>
                    <div style="background: linear-gradient(135deg, #667eea, #764ba2); color: white; padding: 1.5rem; border-radius: 1rem; margin-bottom: 2rem;">
                        <div style="display: flex; justify-content: space-between; align-items: start;">
                            <div>
                                <h3 style="font-size: 1.5rem; font-weight: 700; margin-bottom: 0.5rem;"><%= currentCompetition.title %></h3>
                                <p style="opacity: 0.9; margin-bottom: 1rem;">Type: <strong><%= currentCompetition.type.toUpperCase() %></strong></p>
                                <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 1rem; font-size: 0.875rem;">
                                    <div>
                                        <span style="opacity: 0.8;">Start Date:</span>
                                        <strong><%= new Date(currentCompetition.startDate).toLocaleString() %></strong>
                                    </div>
                                    <div>
                                        <span style="opacity: 0.8;">End Date:</span>
                                        <strong><%= new Date(currentCompetition.endDate).toLocaleString() %></strong>
                                    </div>
                                </div>
                            </div>
                            <div style="text-align: right;">
                                <div style="font-size: 3rem; margin-bottom: 0.5rem;">üèÜ</div>
                                <span style="background: rgba(255, 255, 255, 0.2); padding: 0.5rem 1rem; border-radius: 0.5rem; display: inline-block;">
                                    ACTIVE COMPETITION
                                </span>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <div style="background: #fef3c7; color: #92400e; padding: 1.5rem; border-radius: 1rem; margin-bottom: 2rem; border: 1px solid #fcd34d;">
                        <div style="display: flex; align-items: center; gap: 1rem;">
                            <i class="fas fa-info-circle" style="font-size: 1.5rem;"></i>
                            <div>
                                <h3 style="font-weight: 600; margin-bottom: 0.25rem;">No Active Competition</h3>
                                <p style="opacity: 0.8;">There is currently no active competition. Create one to start accepting entries.</p>
                            </div>
                        </div>
                    </div>
                <% } %>

                <!-- Stats Overview -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-header">
                            <div class="stat-icon" style="background: linear-gradient(135deg, #667eea, #764ba2);">
                                <i class="fas fa-star"></i>
                            </div>
                        </div>
                        <div class="stat-value"><%= stats.totalEntries %></div>
                        <div class="stat-label">Total Entries</div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-header">
                            <div class="stat-icon" style="background: linear-gradient(135deg, #f093fb, #f5576c);">
                                <i class="fas fa-calendar-week"></i>
                            </div>
                        </div>
                        <div class="stat-value"><%= stats.weeklyEntries %></div>
                        <div class="stat-label">This Week</div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-header">
                            <div class="stat-icon" style="background: linear-gradient(135deg, #4facfe, #00f2fe);">
                                <i class="fas fa-trophy"></i>
                            </div>
                        </div>
                        <div class="stat-value"><%= stats.winners %></div>
                        <div class="stat-label">Winners Declared</div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-header">
                            <div class="stat-icon" style="background: linear-gradient(135deg, #43e97b, #38f9d7);">
                                <i class="fas fa-coins"></i>
                            </div>
                        </div>
                        <div class="stat-value"><%= stats.totalCoinsAwarded %></div>
                        <div class="stat-label">Coins Awarded</div>
                    </div>
                </div>

                <!-- Competition Management -->
                <div class="table-container">
                    <div class="table-header">
                        <h3>Competition Management</h3>
                        <button class="btn btn-primary" onclick="showCreateCompetitionModal()">
                            <i class="fas fa-plus"></i> Create Competition
                        </button>
                    </div>
                    <div id="competitions-list" style="padding: 1.5rem;">
                        <div class="loading">Loading competitions...</div>
                    </div>
                </div>

                <!-- Competition Tabs -->
                <div class="table-container">
                    <div class="table-header">
                        <h3>Competition Entries</h3>
                        <div style="display: flex; gap: 1rem;">
                            <select id="competitionFilter" onchange="filterCompetition()" style="padding: 0.5rem; border-radius: 0.5rem; border: 1px solid #d1d5db;">
                                <option value="all">All Competitions</option>
                                <option value="weekly">Weekly</option>
                                <option value="monthly">Monthly</option>
                                <option value="quarterly">Quarterly</option>
                            </select>
                            <select id="categoryFilter" onchange="filterCompetition()" style="padding: 0.5rem; border-radius: 0.5rem; border: 1px solid #d1d5db;">
                                <option value="all">All Categories</option>
                                <option value="singing">Singing</option>
                                <option value="dancing">Dancing</option>
                                <option value="comedy">Comedy</option>
                                <option value="acting">Acting</option>
                                <option value="music">Music</option>
                                <option value="art">Art</option>
                                <option value="other">Other</option>
                            </select>
                        </div>
                    </div>

                    <!-- Entries Grid -->
                    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 1.5rem; padding: 1.5rem;">
                        <% if (entries && entries.length > 0) { %>
                            <% entries.forEach(entry => { %>
                                <div class="entry-card" data-type="<%= entry.competitionType %>" data-category="<%= entry.category %>">
                                    <div style="position: relative;">
                                        <video style="width: 100%; height: 200px; object-fit: cover; border-radius: 0.5rem 0.5rem 0 0;" 
                                               poster="<%= entry.thumbnailUrl || '' %>">
                                            <source src="<%= entry.videoUrl %>" type="video/mp4">
                                        </video>
                                        
                                        <!-- Status Badge -->
                                        <div style="position: absolute; top: 0.5rem; left: 0.5rem;">
                                            <span class="status-badge <%= entry.isActive ? 'status-active' : 'status-suspended' %>">
                                                <%= entry.isActive ? 'Active' : 'Inactive' %>
                                            </span>
                                        </div>
                                        
                                        <!-- Winner Badge -->
                                        <% if (entry.isWinner) { %>
                                            <div style="position: absolute; top: 0.5rem; right: 0.5rem;">
                                                <span class="status-badge" style="background: #fbbf24; color: #78350f;">
                                                    <i class="fas fa-trophy"></i> Winner #<%= entry.winnerPosition %>
                                                </span>
                                            </div>
                                        <% } %>
                                        
                                        <!-- Competition Type -->
                                        <div style="position: absolute; bottom: 0.5rem; left: 0.5rem;">
                                            <span class="status-badge" style="background: #3b82f6; color: white;">
                                                <%= entry.competitionType.toUpperCase() %>
                                            </span>
                                        </div>
                                    </div>
                                    
                                    <div style="padding: 1rem;">
                                        <h4 style="font-size: 1rem; font-weight: 600; margin-bottom: 0.5rem;"><%= entry.title %></h4>
                                        <p style="font-size: 0.875rem; color: #64748b; margin-bottom: 0.75rem;"><%= entry.description || 'No description' %></p>
                                        
                                        <div style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.75rem;">
                                            <img src="<%= entry.user?.profilePicture || 'data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%2224%22 height=%2224%22%3E%3Crect fill=%22%23ddd%22 width=%2224%22 height=%2224%22/%3E%3Ctext x=%2250%25%22 y=%2250%25%22 text-anchor=%22middle%22 dy=%22.3em%22 fill=%22%23999%22 font-family=%22sans-serif%22 font-size=%2216%22%3E?%3C/text%3E%3C/svg%3E' %>" 
                                                 style="width: 24px; height: 24px; border-radius: 50%; object-fit: cover;">
                                            <span style="font-size: 0.875rem; font-weight: 500;">@<%= entry.user?.username || 'Unknown' %></span>
                                        </div>
                                        
                                        <div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 0.5rem; margin-bottom: 1rem; font-size: 0.75rem; color: #64748b;">
                                            <div style="text-align: center;">
                                                <i class="fas fa-vote-yea"></i> <%= entry.votesCount %>
                                            </div>
                                            <div style="text-align: center;">
                                                <i class="fas fa-heart"></i> <%= entry.likesCount %>
                                            </div>
                                            <div style="text-align: center;">
                                                <i class="fas fa-eye"></i> <%= entry.viewsCount %>
                                            </div>
                                            <div style="text-align: center;">
                                                <i class="fas fa-coins"></i> <%= entry.coinsEarned %>
                                            </div>
                                        </div>
                                        
                                        <div style="display: flex; gap: 0.5rem;">
                                            <button class="btn btn-sm btn-primary" onclick="viewEntry('<%= entry._id %>')">
                                                <i class="fas fa-eye"></i> View
                                            </button>
                                            <button class="btn btn-sm <%= entry.isActive ? 'btn-warning' : 'btn-success' %>" 
                                                    onclick="toggleEntry('<%= entry._id %>', <%= !entry.isActive %>)">
                                                <i class="fas fa-<%= entry.isActive ? 'pause' : 'play' %>"></i>
                                            </button>
                                            <% if (!entry.isWinner) { %>
                                                <button class="btn btn-sm" style="background: #fbbf24; color: white;" 
                                                        onclick="declareWinner('<%= entry._id %>')">
                                                    <i class="fas fa-trophy"></i>
                                                </button>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div style="grid-column: 1 / -1;" class="loading">
                                <i class="fas fa-star"></i>
                                <p>No talent entries found</p>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Leaderboard -->
                <div class="table-container">
                    <div class="table-header">
                        <h3>Current Leaderboard</h3>
                    </div>
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Rank</th>
                                <th>User</th>
                                <th>Title</th>
                                <th>Category</th>
                                <th>Votes</th>
                                <th>Likes</th>
                                <th>Views</th>
                                <th>Coins Earned</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (leaderboard && leaderboard.length > 0) { %>
                                <% leaderboard.forEach((entry, index) => { %>
                                    <tr>
                                        <td>
                                            <% if (index < 3) { %>
                                                <span style="font-size: 1.5rem;">
                                                    <%= index === 0 ? 'ü•á' : index === 1 ? 'ü•à' : 'ü•â' %>
                                                </span>
                                            <% } else { %>
                                                #<%= index + 1 %>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="user-profile">
                                                <img class="user-avatar" src="<%= entry.user?.profilePicture || 'data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%2240%22 height=%2240%22%3E%3Crect fill=%22%23ddd%22 width=%2240%22 height=%2240%22/%3E%3Ctext x=%2250%25%22 y=%2250%25%22 text-anchor=%22middle%22 dy=%22.3em%22 fill=%22%23999%22 font-family=%22sans-serif%22 font-size=%2224%22%3E?%3C/text%3E%3C/svg%3E' %>">
                                                <div class="user-info">
                                                    <h4>@<%= entry.user?.username || 'Unknown' %></h4>
                                                    <p><%= entry.user?.displayName || '' %></p>
                                                </div>
                                            </div>
                                        </td>
                                        <td><%= entry.title %></td>
                                        <td><span class="status-badge" style="background: #e0e7ff; color: #3730a3;"><%= entry.category %></span></td>
                                        <td><%= entry.votesCount %></td>
                                        <td><%= entry.likesCount %></td>
                                        <td><%= entry.viewsCount %></td>
                                        <td><%= entry.coinsEarned %></td>
                                        <td>
                                            <button class="btn btn-sm btn-primary" onclick="viewEntry('<%= entry._id %>')">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="9" style="text-align: center; padding: 2rem; color: #64748b;">
                                        No entries in leaderboard
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>

    <!-- Competition Modal -->
    <div id="competitionModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000; align-items: center; justify-content: center;">
        <div style="background: white; border-radius: 1rem; padding: 2rem; max-width: 600px; width: 90%; max-height: 90vh; overflow-y: auto;">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
                <h3 id="modalTitle">Create Competition</h3>
                <button onclick="closeCompetitionModal()" style="background: none; border: none; font-size: 1.5rem; cursor: pointer;">&times;</button>
            </div>
            
            <form id="competitionForm" onsubmit="saveCompetition(event)">
                <input type="hidden" id="competitionId">
                
                <div style="margin-bottom: 1rem;">
                    <label style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Competition Type</label>
                    <select id="competitionType" required style="width: 100%; padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.5rem;">
                        <option value="weekly">Weekly</option>
                        <option value="monthly">Monthly</option>
                        <option value="quarterly">Quarterly</option>
                        <option value="custom">Custom</option>
                    </select>
                </div>
                
                <div style="margin-bottom: 1rem;">
                    <label style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Title</label>
                    <input type="text" id="competitionTitle" required style="width: 100%; padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.5rem;" placeholder="e.g., Weekly Talent Show">
                </div>
                
                <div style="margin-bottom: 1rem;">
                    <label style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Description</label>
                    <textarea id="competitionDescription" rows="3" style="width: 100%; padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.5rem;" placeholder="Competition description..."></textarea>
                </div>
                
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-bottom: 1rem;">
                    <div>
                        <label style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Start Date</label>
                        <input type="datetime-local" id="competitionStartDate" required style="width: 100%; padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.5rem;">
                    </div>
                    <div>
                        <label style="display: block; margin-bottom: 0.5rem; font-weight: 500;">End Date</label>
                        <input type="datetime-local" id="competitionEndDate" required style="width: 100%; padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.5rem;">
                    </div>
                </div>
                
                <div style="margin-bottom: 1.5rem;">
                    <label style="display: block; margin-bottom: 0.5rem; font-weight: 500;">Prizes</label>
                    <div style="display: grid; gap: 0.5rem;">
                        <div style="display: grid; grid-template-columns: auto 1fr 1fr; gap: 0.5rem; align-items: center;">
                            <span>ü•á</span>
                            <input type="number" id="prize1Coins" value="1000" placeholder="Coins" style="padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.5rem;">
                            <input type="text" id="prize1Badge" value="Gold" placeholder="Badge" style="padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.5rem;">
                        </div>
                        <div style="display: grid; grid-template-columns: auto 1fr 1fr; gap: 0.5rem; align-items: center;">
                            <span>ü•à</span>
                            <input type="number" id="prize2Coins" value="500" placeholder="Coins" style="padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.5rem;">
                            <input type="text" id="prize2Badge" value="Silver" placeholder="Badge" style="padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.5rem;">
                        </div>
                        <div style="display: grid; grid-template-columns: auto 1fr 1fr; gap: 0.5rem; align-items: center;">
                            <span>ü•â</span>
                            <input type="number" id="prize3Coins" value="250" placeholder="Coins" style="padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.5rem;">
                            <input type="text" id="prize3Badge" value="Bronze" placeholder="Badge" style="padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 0.5rem;">
                        </div>
                    </div>
                </div>
                
                <div style="display: flex; gap: 1rem; justify-content: flex-end;">
                    <button type="button" onclick="closeCompetitionModal()" class="btn" style="background: #e5e7eb; color: #374151;">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Competition</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // Load competitions on page load
        document.addEventListener('DOMContentLoaded', loadCompetitions);

        async function loadCompetitions() {
            try {
                const response = await fetch('/api/syt/admin-web/competitions', {
                    credentials: 'include'
                });
                const result = await response.json();
                
                if (result.success) {
                    displayCompetitions(result.data);
                }
            } catch (error) {
                console.error('Error loading competitions:', error);
            }
        }

        function displayCompetitions(competitions) {
            const container = document.getElementById('competitions-list');
            
            if (!competitions || competitions.length === 0) {
                container.innerHTML = '<div style="text-align: center; padding: 2rem; color: #64748b;">No competitions found. Create one to get started!</div>';
                return;
            }
            
            container.innerHTML = competitions.map(comp => {
                const now = new Date();
                const start = new Date(comp.startDate);
                const end = new Date(comp.endDate);
                const isActive = comp.isActive && now >= start && now <= end;
                const isPast = now > end;
                const isFuture = now < start;
                
                let statusBadge = '';
                if (isActive) {
                    statusBadge = '<span class="status-badge status-active">Active</span>';
                } else if (isPast) {
                    statusBadge = '<span class="status-badge" style="background: #f3f4f6; color: #6b7280;">Ended</span>';
                } else if (isFuture) {
                    statusBadge = '<span class="status-badge" style="background: #dbeafe; color: #1e40af;">Upcoming</span>';
                }
                
                return `
                    <div style="background: rgba(248, 250, 252, 0.5); padding: 1.5rem; border-radius: 0.75rem; margin-bottom: 1rem; border: 1px solid rgba(0,0,0,0.05);">
                        <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem;">
                            <div>
                                <h4 style="font-size: 1.125rem; font-weight: 600; margin-bottom: 0.5rem;">${comp.title}</h4>
                                <p style="color: #64748b; font-size: 0.875rem;">${comp.description || 'No description'}</p>
                            </div>
                            <div style="display: flex; gap: 0.5rem; align-items: center;">
                                ${statusBadge}
                                <span class="status-badge" style="background: #e0e7ff; color: #3730a3;">${comp.type.toUpperCase()}</span>
                            </div>
                        </div>
                        
                        <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 1rem; margin-bottom: 1rem; font-size: 0.875rem;">
                            <div>
                                <span style="color: #64748b;">Start:</span>
                                <strong>${new Date(comp.startDate).toLocaleString()}</strong>
                            </div>
                            <div>
                                <span style="color: #64748b;">End:</span>
                                <strong>${new Date(comp.endDate).toLocaleString()}</strong>
                            </div>
                        </div>
                        
                        <div style="display: flex; gap: 0.5rem; margin-bottom: 1rem;">
                            ${comp.prizes.map(p => `
                                <span style="background: #fef3c7; color: #92400e; padding: 0.25rem 0.75rem; border-radius: 0.375rem; font-size: 0.75rem;">
                                    ${p.position === 1 ? 'ü•á' : p.position === 2 ? 'ü•à' : 'ü•â'} ${p.coins} coins
                                </span>
                            `).join('')}
                        </div>
                        
                        <div style="display: flex; gap: 0.5rem;">
                            <button class="btn btn-sm btn-primary" onclick="editCompetition('${comp._id}')">
                                <i class="fas fa-edit"></i> Edit
                            </button>
                            <button class="btn btn-sm ${comp.isActive ? 'btn-warning' : 'btn-success'}" onclick="toggleCompetition('${comp._id}', ${!comp.isActive})">
                                <i class="fas fa-${comp.isActive ? 'pause' : 'play'}"></i> ${comp.isActive ? 'Deactivate' : 'Activate'}
                            </button>
                            <button class="btn btn-sm btn-danger" onclick="deleteCompetition('${comp._id}')">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function showCreateCompetitionModal() {
            document.getElementById('modalTitle').textContent = 'Create Competition';
            document.getElementById('competitionForm').reset();
            document.getElementById('competitionId').value = '';
            document.getElementById('competitionModal').style.display = 'flex';
        }

        async function editCompetition(id) {
            try {
                const response = await fetch('/api/syt/admin-web/competitions', {
                    credentials: 'include'
                });
                const result = await response.json();
                
                if (result.success) {
                    const comp = result.data.find(c => c._id === id);
                    if (comp) {
                        document.getElementById('modalTitle').textContent = 'Edit Competition';
                        document.getElementById('competitionId').value = comp._id;
                        document.getElementById('competitionType').value = comp.type;
                        document.getElementById('competitionTitle').value = comp.title;
                        document.getElementById('competitionDescription').value = comp.description || '';
                        document.getElementById('competitionStartDate').value = new Date(comp.startDate).toISOString().slice(0, 16);
                        document.getElementById('competitionEndDate').value = new Date(comp.endDate).toISOString().slice(0, 16);
                        
                        if (comp.prizes[0]) {
                            document.getElementById('prize1Coins').value = comp.prizes[0].coins;
                            document.getElementById('prize1Badge').value = comp.prizes[0].badge;
                        }
                        if (comp.prizes[1]) {
                            document.getElementById('prize2Coins').value = comp.prizes[1].coins;
                            document.getElementById('prize2Badge').value = comp.prizes[1].badge;
                        }
                        if (comp.prizes[2]) {
                            document.getElementById('prize3Coins').value = comp.prizes[2].coins;
                            document.getElementById('prize3Badge').value = comp.prizes[2].badge;
                        }
                        
                        document.getElementById('competitionModal').style.display = 'flex';
                    }
                }
            } catch (error) {
                alert('Error loading competition details');
            }
        }

        async function saveCompetition(event) {
            event.preventDefault();
            
            const id = document.getElementById('competitionId').value;
            const data = {
                type: document.getElementById('competitionType').value,
                title: document.getElementById('competitionTitle').value,
                description: document.getElementById('competitionDescription').value,
                startDate: document.getElementById('competitionStartDate').value,
                endDate: document.getElementById('competitionEndDate').value,
                prizes: [
                    { position: 1, coins: parseInt(document.getElementById('prize1Coins').value), badge: document.getElementById('prize1Badge').value },
                    { position: 2, coins: parseInt(document.getElementById('prize2Coins').value), badge: document.getElementById('prize2Badge').value },
                    { position: 3, coins: parseInt(document.getElementById('prize3Coins').value), badge: document.getElementById('prize3Badge').value }
                ]
            };
            
            try {
                const url = id ? `/api/syt/admin-web/competitions/${id}` : '/api/syt/admin-web/competitions';
                const method = id ? 'PUT' : 'POST';
                
                const response = await fetch(url, {
                    method,
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'include',
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert(result.message);
                    closeCompetitionModal();
                    loadCompetitions();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                alert('Failed to save competition');
            }
        }

        async function toggleCompetition(id, activate) {
            if (confirm(`Are you sure you want to ${activate ? 'activate' : 'deactivate'} this competition?`)) {
                try {
                    const response = await fetch(`/api/syt/admin-web/competitions/${id}`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        credentials: 'include',
                        body: JSON.stringify({ isActive: activate })
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        alert(result.message);
                        loadCompetitions();
                    } else {
                        alert('Error: ' + result.message);
                    }
                } catch (error) {
                    alert('Failed to toggle competition status');
                }
            }
        }

        async function deleteCompetition(id) {
            if (confirm('Are you sure you want to delete this competition? This action cannot be undone.')) {
                try {
                    const response = await fetch(`/api/syt/admin-web/competitions/${id}`, {
                        method: 'DELETE',
                        credentials: 'include'
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        alert(result.message);
                        loadCompetitions();
                    } else {
                        alert('Error: ' + result.message);
                    }
                } catch (error) {
                    alert('Failed to delete competition');
                }
            }
        }

        function closeCompetitionModal() {
            document.getElementById('competitionModal').style.display = 'none';
        }

        function filterCompetition() {
            const typeFilter = document.getElementById('competitionFilter').value;
            const categoryFilter = document.getElementById('categoryFilter').value;
            const cards = document.querySelectorAll('.entry-card');
            
            cards.forEach(card => {
                const type = card.dataset.type;
                const category = card.dataset.category;
                
                const typeMatch = typeFilter === 'all' || type === typeFilter;
                const categoryMatch = categoryFilter === 'all' || category === categoryFilter;
                
                card.style.display = (typeMatch && categoryMatch) ? 'block' : 'none';
            });
        }

        function viewEntry(entryId) {
            window.open(`/api/syt/entries?id=${entryId}`, '_blank');
        }

        async function toggleEntry(entryId, activate) {
            const action = activate ? 'activate' : 'deactivate';
            if (confirm(`Are you sure you want to ${action} this entry?`)) {
                try {
                    const response = await fetch(`/api/admin/syt/${entryId}/toggle`, {
                        method: 'PUT',
                    });
                    const result = await response.json();
                    if (result.success) {
                        alert(result.message);
                        window.location.reload();
                    } else {
                        alert('Error: ' + result.message);
                    }
                } catch (error) {
                    alert('Failed to toggle entry status');
                }
            }
        }

        async function declareWinner(entryId) {
            const position = prompt('Enter winner position (1, 2, or 3):');
            if (position && ['1', '2', '3'].includes(position)) {
                try {
                    const response = await fetch(`/api/admin/syt/${entryId}/winner`, {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ position: parseInt(position) })
                    });
                    const result = await response.json();
                    if (result.success) {
                        alert(result.message);
                        window.location.reload();
                    } else {
                        alert('Error: ' + result.message);
                    }
                } catch (error) {
                    alert('Failed to declare winner');
                }
            }
        }
    </script>
